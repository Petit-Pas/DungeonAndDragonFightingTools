<UserControl x:Class="DDFight.Controlers.CharacterListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDFight.Controlers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="CharactersGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    Character List
        </TextBlock>
        <Grid Grid.Row="1" MinWidth="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox 
                x:Name="CharacterList" 
                Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                DisplayMemberPath="Name"
                MouseDoubleClick="CharacterList_MouseDoubleClick"/>
            <Button Grid.Row="1" Grid.Column="0" Margin="10" Click="AddCharacter">
                Add Character
            </Button>
            <Button Grid.Row="1" Grid.Column="1" Margin="10" Click="RemoveCharacter_Click">
                Remove
            </Button>
        </Grid>
    </Grid>
</UserControl>
