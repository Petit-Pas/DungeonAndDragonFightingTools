<Window x:Class="DDFight.Windows.EditCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDFight.Windows"
        mc:Ignorable="d"
        xmlns:conv="clr-namespace:DDFight.Converters"
        xmlns:validation="clr-namespace:DDFight.ValidationRules"
        xmlns:input="clr-namespace:DDFight.Controlers.InputBoxes"
        xmlns:controlers="clr-namespace:DDFight.Controlers"
        Title="Edit Character" Height="550" Width="400"
        WindowStartupLocation="CenterOwner"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10, 5">
            Name
        </TextBlock>
        <input:NotEmptyStringTextBox x:Name="NameBoxUserControl" 
                                     Grid.Row="0" Grid.Column="1" Margin="0, 5, 10, 5"
                                     PropertyPath="Name"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10, 5">
            Level
        </TextBlock>
        <input:NotEmptyStringTextBox x:Name="LevelBoxUserControl" 
                                     Grid.Row="1" Grid.Column="1" Margin="0, 5, 10, 5"
                                     PropertyPath="Level"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="10, 5">
            Armor class
        </TextBlock>
        <input:PositiveIntTextBox x:Name="CABoxUserControl" 
                          Grid.Row="2" Grid.Column="1" Margin="0, 5, 10, 5" 
                          PropertyPath="CA"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="10, 5">
            Max HP
        </TextBlock>
        <input:PositiveIntTextBox x:Name="MaxHPBoxUserControl" 
                          Grid.Row="3" Grid.Column="1" Margin="0, 5, 10, 5" 
                          PropertyPath="MaxHp"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="10, 5">
            Current HP
        </TextBlock>
        <input:IntTextBox x:Name="HPBoxUserControl" 
                          Grid.Row="4" Grid.Column="1" Margin="0, 5, 10, 5"
                          PropertyPath="Hp"/>

        <controlers:CharacteristicsUserControl x:Name="CharacteristicsUserControl" Grid.Row="5" Grid.ColumnSpan="2" />

        <Grid x:Name="ButtonsGrid" Grid.Row="6" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ValidateButton" Grid.Column="0" 
                    MaxWidth="100" MinHeight="40"
                    Click="ValidateButton_Click">
                Validate
            </Button>
            <Button x:Name="CancelButton" Grid.Column="1"
                    MaxWidth="100" MinHeight="40"
                    Click="CancelButton_Click">
                Cancel
            </Button>
        </Grid>
    </Grid>
</Window>
