<Window x:Class="DDFight.Windows.FightWindows.MainFightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDFight.Windows.FightWindows"
        xmlns:controlers="clr-namespace:DDFight.Controlers"
        mc:Ignorable="d"
        Title="Main Fight Window" Height="1080" Width="1920"
        Background="{StaticResource LightestGray}"
        WindowState="Maximized"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controlers:ConsoleUserControl 
            x:Name="ConsoleControl"
            Grid.Row="1"/>

    </Grid>
</Window>
