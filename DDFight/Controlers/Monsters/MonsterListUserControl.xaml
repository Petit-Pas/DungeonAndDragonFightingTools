<UserControl x:Class="DDFight.Controlers.MonsterListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDFight.Controlers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox
        Foreground="{StaticResource Light}">
        <GroupBox.Header>
            <TextBlock
                FontSize="15"
                FontWeight="SemiBold"
                Foreground="{StaticResource Light}">
                Monsters' List
            </TextBlock>
        </GroupBox.Header>
        <Grid x:Name="MonstersGrid" Margin="10"
          Background="{StaticResource LightestGray}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Row="0" MinWidth="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListBox 
                    Background="{StaticResource Gray}"
                    x:Name="MonsterList" 
                    Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                    DisplayMemberPath="Name"
                    MouseDoubleClick="MonsterList_MouseDoubleClick"
                    KeyDown="MonsterList_KeyDown">
                    <ListBox.Resources>
                        <ContextMenu x:Key="CMenu">
                            <MenuItem Header="Edit" Click="EditMonster_MenuItem_Click"/>
                            <MenuItem Header="Duplicate" Click="DuplicateMonster_MenuItem_Click"/>
                            <MenuItem Header="Add to Fight" Click="AddToFight_MenuItem_Click"/>
                            <Separator/>
                            <MenuItem Header="Delete" Click="DeleteMonster_MenuItem_Click"/>
                        </ContextMenu>
                    </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="ContextMenu" Value="{StaticResource CMenu}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Light}"/>
                            <Setter Property="Margin" Value="3"/>
                            <Setter Property="Foreground" Value="{StaticResource Light}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <Button 
                    Grid.Row="1" Grid.Column="0" 
                    Margin="0, 10, 10, 10" 
                    Click="AddMonster_Button_Click"
                    FontWeight="SemiBold">
                    Add Monster
                </Button>
                <Button 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Margin="10, 10, 0, 10" 
                    Click="RemoveMonster_Button_Click"
                    FontWeight="SemiBold">
                    Remove
                </Button>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
