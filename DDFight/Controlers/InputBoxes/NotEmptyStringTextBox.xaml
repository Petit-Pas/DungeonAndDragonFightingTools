<UserControl x:Class="DDFight.Controlers.InputBoxes.NotEmptyStringTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDFight.Controlers.InputBoxes"
             mc:Ignorable="d" 
             xmlns:conv="clr-namespace:DDFight.Converters"
             xmlns:validation="clr-namespace:DDFight.ValidationRules"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:IntToStringConverter x:Key="IntStringConverter"/>
        <ControlTemplate x:Key="ValidationTemplate">
            <DockPanel>
                <TextBlock Foreground="Red" FontSize="20"></TextBlock>
                <AdornedElementPlaceholder/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="TextBoxInError" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
              Value="{Binding RelativeSource={x:Static RelativeSource.Self},
                              Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBox 
            Background="{StaticResource Gray}"
            Foreground="{StaticResource Light}"
            x:Name="StringBox" 
            Style="{StaticResource TextBoxInError}" 
            BorderThickness="2"
            KeyDown="StringBox_KeyDown"
            GotFocus="StringBox_GotFocus"
            TextWrapping="NoWrap"
            HorizontalAlignment="Stretch"
            DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:NotEmptyStringTextBox}}}">

            <TextBox.Text>
                <Binding Path="String" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:NotEmptyStringRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
    </Grid>
</UserControl>
