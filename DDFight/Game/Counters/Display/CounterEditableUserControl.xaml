<UserControl x:Class="DDFight.Game.Counters.Display.CounterEditableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDFight.Game.Counters.Display"
             xmlns:input="clr-namespace:DDFight.Controlers.InputBoxes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <input:NotEmptyStringTextBox 
            Grid.ColumnSpan="2"
            PropertyPath="Name"/>

        <TextBlock
            Grid.Row="1" Grid.Column="0">
            Current: 
        </TextBlock>
        <input:PositiveIntTextBox 
            Grid.Row="1" Grid.Column="1"
            PropertyPath="CurrentValue"/>

        <TextBlock
            Grid.Row="2" Grid.Column="0">
            Max (0 for no max):
        </TextBlock>
        <input:PositiveIntTextBox 
            Grid.Row="2" Grid.Column="1"
            PropertyPath="MaxValue"/>

    </Grid>
</UserControl>
