<Window x:Class="DDFight.Game.Status.Display.EditCustomVerboseStatusListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDFight.Game.Status.Display"
        xmlns:status="clr-namespace:DDFight.Controlers.Game.Status"
        mc:Ignorable="d"
        Title="EditCustomVerboseStatusListWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Grid Background="{StaticResource LightestGray}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <status:EditableCustomVerboseStatusList />
        <Button 
            Grid.Row="1"
            Width="250"
            FontWeight="SemiBold"
            FontSize="18"
            Padding="10"
            Margin="0, 5, 0, 10"
            Click="Button_Click">
            Save
        </Button>
    </Grid>
</Window>
