<UserControl x:Class="DDFight.Game.Aggression.Spells.SpellListEditableUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDFight.Game.Aggression.Spells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox
        Foreground="{StaticResource Light}">
            <GroupBox.Header>
                <TextBlock
                FontSize="15"
                FontWeight="SemiBold"
                Foreground="{StaticResource Light}">
                Spells' list
                </TextBlock>
            </GroupBox.Header>
            <Grid 
            Background="{StaticResource LightestGray}"
            x:Name="SpellsGrid" 
            Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox
                Grid.Row="0"
                Grid.Column="0"
                x:Name="FilterTextBox"
                KeyUp="FilterTextBox_KeyUp"
                Background="{StaticResource Gray}"
                Foreground="{StaticResource Light}"
                Margin="5" />

                <Grid Grid.Row="1" MinWidth="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox 
                    Background="{StaticResource Gray}"
                    x:Name="SpellList" 
                    Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                    DisplayMemberPath="Name"
                    MouseDoubleClick="SpellList_MouseDoubleClick"
                    KeyDown="SpellList_KeyDown"
                    VirtualizingPanel.IsVirtualizing="False">

                        <ListBox.Resources>
                            <ContextMenu x:Key="CMenu">
                                <MenuItem Header="Edit" Click="EditSpell_MenuItem_Click"/>
                                <MenuItem Header="Duplicate" Click="DuplicateSpell_MenuItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Delete" Click="DeleteSpell_MenuItem_Click"/>
                            </ContextMenu>
                        </ListBox.Resources>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu" Value="{StaticResource CMenu}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Light}"/>
                                <Setter Property="Margin" Value="3"/>
                                <Setter Property="Foreground" Value="{StaticResource Light}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <Button 
                    Grid.Row="1" Grid.Column="0" 
                    Margin="0, 10, 10, 10" 
                    Click="AddSpell_Button_Click"
                    FontWeight="SemiBold">
                        Add Spell
                    </Button>
                    <Button 
                    Grid.Row="1" Grid.Column="1" 
                    Margin="10, 10, 0, 10" 
                    Click="RemoveSpell_Button_Click"
                    FontWeight="SemiBold">
                        Remove
                    </Button>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
