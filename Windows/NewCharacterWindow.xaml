<Window x:Class="DDFight.Windows.NewCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDFight.Windows"
        mc:Ignorable="d"
        Title="NewCharacterWindow" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10">
            Name
        </TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0, 10, 10, 10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="10">
            Initiative
        </TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0, 10, 10, 10"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="10">
            Armor class
        </TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0, 10, 10, 10"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="10">
            Max HP
        </TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0, 10, 10, 10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="10">
            Current HP
        </TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0, 10, 10, 10"/>
    </Grid>
</Window>
